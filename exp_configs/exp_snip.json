{
    "general": {
        "id": "exp_snip",
        "description": "resnet18 snip compressor, mask batch size 1, sparsity 0.9.",
        "gpu": {
            "ngpus": 1,
            "gpu_id": 0
        },
        "experiment": "pbt",
        "seed": 0,
        "output_dir": "./outputs"
    },
    "dataset": {
        "class": "cifar10",
        "batch_size": 512
    },
    "model": {
        "class": "resnet18",
        "num_classes": 10
    },
    "training": {
        "num_steps": 160,
        "criterion": {
            "class": "CE"
        },
        "optimizer": {
            "class": "sgd",
            "learning_rate": 0.01,
            "momentum": 0.9,
            "w_decay": 0.0005,
            "lr_drops": [
                60,
                120
            ],
            "lr_drop_factor": 0.2
        },
        "compressor": {
            "class": "snip",
            "mask": "global",
            "sparsity": 0.9,
            "warmup": 0,
            "batch_size": 1
        }
    },
    "validation": {
        "metric": "acc",
        "frequency": 1
    }
}